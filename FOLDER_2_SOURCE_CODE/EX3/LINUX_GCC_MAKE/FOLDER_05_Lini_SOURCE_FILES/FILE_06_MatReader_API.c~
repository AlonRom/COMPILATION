/**********************/
/* Parse Input Matrix */
/**********************/
MAT Parse_Input_Matrix(string Matrix_Filename)
{
	/*************************/
	/* Open file for parsing */
	/*************************/
	MatReader_ErrorMsg_Reset(Matrix_Filename);

	/*******************************/
	/* 3 ... 2 ... 1 ... parse !!! */
	/*******************************/
	if (aaparse() == 0)
	{
		/******************/
		/* parsing worked */
		/******************/
		return absyn_root;
	}
	else
	{
		/******************/
		/* parsing failed */
		/******************/
		return NULL;
	}
}

/***************************/
/* Pseudo_Assembley_To_AST */
/***************************/
PSEUDO_MIPS_ASM_AST_expList Pseudo_Assembley_To_AST(string Pseudo_Assembley_Filename)
{
	PSEUDO_MIPS_ASM_AST_EM_reset(Pseudo_Assembley_Filename);
 	if (zzparse() == 0)
	{
		/******************/
		/* parsing worked */
		/******************/
		return PSEUDO_MIPS_ASM_AST_root;
	}
	else
	{
		return NULL;
	}
}
